
<div class="cat-desc" >
  <figure class="overlay-figure col-md-12  cat-image" style="background-image: linear-gradient(to bottom right, rgba(211, 131, 18, 0.50), rgba(168, 50, 121, 0.50)), url('./img/{{src}}');">
    <div class="overlay-figure-content">
      <div class="overlay-figure-background"></div>
    </div>
    <figcaption class="overlay-figure-caption">
      <div class="contents">
        <div class="contents-stack">
          <h2 class="cat-name">{{name}}</h2>
          <div class="separator"></div>
          <p class="text">{{description}}</p>
        </div>
      </div>
    </figcaption>
  </figure>
</div>
